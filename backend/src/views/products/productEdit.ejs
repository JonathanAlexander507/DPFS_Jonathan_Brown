<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head")%>
  </head>
  <body>
    <header><%- include("../partials/header")%></header>
    <main class="productos_main">
      <div class="div_padre_productos">
        <h1 class="titulo_editar"><%= product ? 'Editar Producto' : 'Agregar Producto' %></h1>

<form action="/productos/save" method="POST" class="form_editar_productos">
    <!-- Campo oculto para el ID del producto (solo se usa para editar) -->
    <input type="hidden" name="id" value="<%= product ? product.id : '' %>">

    <!-- Nombre del producto -->
    <label for="name">Nombre del producto:</label>
    <input type="text" id="name" name="name" value="<%= product ? product.name : '' %>" required>

    <!-- Marca -->
    <label for="brand">Marca:</label>
    <input type="text" id="brand" name="brand" value="<%= product ? product.brand : '' %>" required>

    <!-- Modelo -->
    <label for="model">Modelo:</label>
    <input type="text" id="model" name="model" value="<%= product ? product.model : '' %>" required>

    <!-- Especificaciones -->
    <label for="specs1">Especificación 1:</label>
    <input type="text" id="specs1" name="specs1" value="<%= product ? product.specs1 : '' %>" required>

    <label for="specs2">Especificación 2:</label>
    <input type="text" id="specs2" name="specs2" value="<%= product ? product.specs2 : '' %>" required>

    <label for="specs3">Especificación 3:</label>
    <input type="text" id="specs3" name="specs3" value="<%= product ? product.specs3 : '' %>">

    <!-- Descripción principal -->
    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required><%= product ? product.description : '' %></textarea>

    <!-- Descripción secundaria -->
    <label for="description2">Descripción 2:</label>
    <textarea id="description2" name="description2" required><%= product ? product.description2 : '' %></textarea>

    <!-- Imagen principal -->
    <label for="image">Imagen (URL):</label>
    <input type="text" id="image" name="image" value="<%= product ? product.image : '' %>" required>

    <!-- Imagenes adicionales -->
    <label for="image1">Imagen adicional 1 (URL):</label>
    <input type="text" id="image1" name="image1" value="<%= product ? product.image1 : '' %>" required>

    <label for="image2">Imagen adicional 2 (URL):</label>
    <input type="text" id="image2" name="image2" value="<%= product ? product.image2 : '' %>" required>

    <label for="image3">Imagen adicional 3 (URL):</label>
    <input type="text" id="image3" name="image3" value="<%= product ? product.image3 : '' %>" required>

    <label for="image4">Imagen adicional 4 (URL):</label>
    <input type="text" id="image4" name="image4" value="<%= product ? product.image4 : '' %>" required>

    <!-- Categoría -->
    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category" value="<%= product ? product.category : '' %>" required>

    <!-- Precio -->
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" value="<%= product ? product.price : '' %>" required>

    <button type="submit" id="editar_producto"><%= product ? 'Actualizar Producto' : 'Agregar Producto' %></button>
</form>

<!-- Botón para eliminar producto (solo si se está editando) -->
<% if (product) { %>
    <form action="/productos/delete/<%= product.id %>" method="POST" style="margin-top: 10px;" class="form_editar_productos">
        <button type="submit" id="editar_producto" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?')">Eliminar Producto</button>
    </form>
<% } %>

      </div>
    </main>
    <footer><%- include("../partials/footer")%></footer>
    <script src="/javascripts/home.js"></script>
  </body>
</html>
