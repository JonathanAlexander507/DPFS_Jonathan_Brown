<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("../partials/head")%>
    <link rel="stylesheet" href="/stylesheets/searchResults_style.css" />
</head>
<body>
    <header><%- include("../partials/header")%></header>
    <main>
    <h1 class="titulo_main"><%= title %></h1>
    <section class="tarjetas_grupo">
    <% if (products.length === 0) { %>
        <p class="error_busqueda_texto"><%= message %></p>
    <% } else { %>
            <% products.forEach(product => { %>
                <article class="tarjetas">
                    <div class="imagen_producto">
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>" />
                    </div>
                    <span class="nombre_producto"><a href="/products/productDetail/<%= product.id %>"><%= product.name %></a></span>
                    <p class="descripcion_producto"><%= product.description %></p>
                    <div class="div_precio"><span class="precio_texto">precio:</span><span class="precio_producto">$ <%= product.price ? parseFloat(product.price).toFixed(2) : '0.00' %></span></div>
                    <div>
                        <button class="boton_añadir" type="submit">
                            Añadir al carrito
                        </button>
                    </div>
                </article>
            <% }) %>
    <% } %>
</section>
    </main>
    <footer><%- include("../partials/footer")%></footer>
    <script src="/javascripts/home.js"></script>
</body>
</html>
